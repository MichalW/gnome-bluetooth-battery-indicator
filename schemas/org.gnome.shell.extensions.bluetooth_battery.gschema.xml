<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions">
    <schema
        id="org.gnome.shell.extensions.bluetooth_battery_indicator"
        path="/org/gnome/shell/extensions/bluetooth_battery_indicator/">

        <key name="interval" type="i">
            <default>5</default>
            <summary>Refresh interval (minutes)</summary>
        </key>

        <key name="hide-indicator" type="b">
            <default>false</default>
            <summary>Refresh interval (minutes)</summary>
        </key>

        <key name="use-toggle-bluetooth" type="b">
            <default>false</default>
            <summary>Disconnect the device before get battery level</summary>
        </key>

        <key name="devices" type="as">
            <default>[]</default>
        </key>
    </schema>
</schemalist>
